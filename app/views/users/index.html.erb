<span style= "text-align: center">
<h2>All users</h2>
</span>
<ul class="users">
  <% @users.each do |user| %>
    <li>
     <%= link_to h(user.name), user %>
	 <% if current_user.admin? %>
   | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?" %>
	 <% end %>
	</li>
  <% end %>
</ul>