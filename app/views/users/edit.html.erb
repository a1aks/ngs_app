<span style= "text-align: center">
	<h2>Changing personal details</h2>

	<% simple_form_for(@user) do |f| %>
	<%= f.error_messages %>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password, "Change Password" %><br />
			<%= f.password_field :password %>
		</div>
		<div class="field">
			<%= f.label :password_confirmation, "Confirm Password" %><br />
			<%= f.password_field :password_confirmation %>
		</div>
		<div class="actions">
			<%= f.submit "Update" %>
		</div>
	<% end %>
</span>