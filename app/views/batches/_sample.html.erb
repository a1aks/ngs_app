<div class="sample">
<% fields_for "batch[sample_attributes][]", sample do |s_form| %>  
<table>
	 <tr>
	    <th>Sample Name  </th> 
	    <th>Species  </th>
	    <th>Concentration  </th>
	    <th>Volume </th>
	    <th>Sample comment  </th>
	  </tr>
	 <tr>
	    <td><%= s_form.text_field :name, :index => nil, :size => 15 %></td> 
	    <td><%= s_form.text_field :organism, :index => nil, :size => 15 %></td>
	    <td><%= s_form.text_field :ini_conc, :index => nil, :size => 15 %></td>
	    <td><%= s_form.text_field :ini_vol, :index => nil, :size => 15 %></td>
	    <td><%= s_form.text_field :samp_comment, :index => nil, :size => 15 %></td>
	  </tr>
</table>	
	<% if sample.new_record? %>
	<%= link_to_function "remove", "$(this).up('.sample').remove()" %>
	<% else %>
	<%= link_to_function "remove", "mark_for_destroy(this)" %>
	<%= s_form.hidden_field :id, :index => nil %>
	<%= s_form.hidden_field :should_destroy, :index => nil, :class => 'should_destroy' %>
	<% end %>	
<% end %>
</div>
