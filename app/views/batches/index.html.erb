<span style= "text-align: center">
<h2>Listing batches</h2>
</span>
<table>
  <tr>
    <th>Batch name</th>
	<th>Submit date</th>
	<th>Group leader</th>
	<th>Contact person</th>
  </tr>

<% @batches.each do |batch| %>
  <tr>
    <td><%=h batch.name %></td>
	<td><%=h batch.created_at.strftime("%a - %d %B") %></td>	
    <td><%=h batch.grp_leader %></td>
    <td><%=h batch.contact_person %></td>
	<td><%= link_to 'Add Sequencing', :controller => :sequences, :action => :new, :id => batch.id %></td>
    <td><%= link_to 'Show', batch %></td>
    <td><%= link_to 'Edit', edit_batch_path(batch) %></td>
    <td><%= link_to 'Destroy', batch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Submit a new Batch', new_batch_path %>