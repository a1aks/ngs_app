<span style= "text-align: center">
<h2>Adding Qcs to Samples</h2>
</span>

<% form_tag create_qc_samples_path, :method => :put do %>
		
		<div id="table">
			<p>
				<span class="col1"><strong>Sample Name</strong></span>
				<span class="col2"><strong>Conc</strong> </span>
				<span class="col3"> <strong>260/280 </strong></span>
				<span class="col4"><strong> 260/230</strong> </span>
				<span class="col5"> <strong>Agilent</strong> </span>
				<span class="col3"> <strong>Result</strong></span>
			</p><br \>

		<% for sample in @samples %>
		<!-- For each sample in @samples, it adds qc and renders the page with only those ids -->
			<% fields_for "samples[]", sample do |f| -%>			
				<p>
					<span class="col1"><%= sample.name %></span>
					<span class="col2"><%= f.text_field :conc, :size => 8 %></span>
					<span class="col3"><%= f.text_field :ratio1, :size => 8 %></span>
					<span class="col4"><%= f.text_field :ratio2, :size => 8 %></span>
					<span class="col5"><%= f.text_field :agilent, :size => 8 %> </span>
					<span class="col3"><%= f.select :result, [['Pending','pending'],['Pass','pass'],['Fail','fail']], :selected => 'pending'  %></span>
				</p>
			<% end %>
		<% end %><br \>	
		</div><br \> <!-- eof #table -->
	<p><%= submit_tag "Submit" %></p>
<% end %>

<%= link_to 'Back to sample listings', samples_path %>